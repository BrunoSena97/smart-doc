# .env.example - Copy to .env and customize for your environment
# SmartDoc Configuration Environment Variables

# Knowledge Base Configuration
SMARTDOC_CASE_FILE=data/cases/case01.json
SMARTDOC_CANONICAL_MAPPINGS_FILE=data/mappings/case01_canonical_question_mappings.json

# NLU Configuration
SMARTDOC_SBERT_MODEL=all-MiniLM-L6-v2
SMARTDOC_SIMILARITY_CUTOFF=0.70
SMARTDOC_NLU_MAX_RESULTS=5

# NLG Configuration (Ollama)
SMARTDOC_OLLAMA_BASE_URL=http://localhost:11434
SMARTDOC_OLLAMA_MODEL=gemma3:4b-it-q4_K_M
SMARTDOC_NLG_MAX_TOKENS=100
SMARTDOC_NLG_TEMPERATURE=0.7

# Logging Configuration
SMARTDOC_CONVERSATION_LOG=smartdoc_conversation_log.txt
SMARTDOC_SYSTEM_LOG=system_log.txt
SMARTDOC_LOG_LEVEL=INFO

# Flask Configuration
SMARTDOC_FLASK_HOST=127.0.0.1
SMARTDOC_FLASK_PORT=5000
SMARTDOC_FLASK_DEBUG=false

# Session Configuration
SMARTDOC_SESSION_TIMEOUT=30
SMARTDOC_MAX_TURNS=100

# Error Handling Configuration
SMARTDOC_MAX_RETRIES=3
SMARTDOC_RETRY_DELAY=1.0
SMARTDOC_FALLBACK_ENABLED=true
